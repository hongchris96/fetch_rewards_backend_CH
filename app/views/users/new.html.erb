<div>
  <p><%= flash[:errors] %></p>
  <h2>Input New User</h2>

  <% if @user%>
    <% value_name = @user.username %>
    <% value_balance = @user.balance %>
  <% else %>
    <% value_name = nil %>
    <% value_balance = nil %>
  <% end %>


  <form action="<%= api_users_url %>" method="post">
    <p>
      <label>Username:
        <input type="text" name="user[username]" value="<%= value_name %>">
      </label>
    </p>
    <p>
      <label>Balance:
        <input type="text" name="user[balance]" value="<%= value_balance %>">
      </label>
    </p>
    <p>
      <input type="submit" value="Create this user">
    </p>
  </form>
</div>

<a href="<%= users_url %>">User Index</a>